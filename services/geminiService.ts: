
import { GoogleGenAI, Type, Modality } from "@google/genai";
import { IntakeData, Meal, DailyLog, WeeklyCheckIn, FoodItem, WeeklyReview, LoggedFood } from "../types";

const parseGeminiJson = (text: string) => {
  try {
    const cleaned = text.replace(/```json/g, '').replace(/```/g, '').trim();
    return JSON.parse(cleaned);
  } catch (e) {
    console.error("Failed to parse JSON:", e);
    return null;
  }
};

export async function generatePersonalizedPlan(data: IntakeData): Promise<any> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-3-pro-preview",
    contents: `You are a world-class fitness coach for Asian professionals living in the UK. 
    Create a clear 12-week training and nutrition plan for:
    Name: ${data.name}
    Gender: ${data.gender}
    Main Goal: ${data.goal}
    Dietary Preference: ${data.dietPreference}
    Cultural Background: ${data.culturalPreference}
    Current Weight: ${data.weight}kg, Height: ${data.height}cm
    
    UK REQUIREMENTS:
    - Use UK English (Programme, Analysing, Colour).
    - If FEMALE: Focus on tone, strength, and health.
    - If MALE: Focus on athletic shape and strength.
    - NUTRITION: Suggest foods easily found in UK supermarkets like Tesco, Sainsbury's, or Waitrose. 
    - Include healthy British Asian staples (Daal, Grilled Chicken, Paneer, Tofu, Lean Lamb).
    - Keep instructions plain and easy to follow. No complex jargon.
    
    Return a JSON object with trainingDayMacros (calories, p, c, f), restDayMacros, mealPlan (array of meals with name, ingredients, instructions), workoutSplit (array of days with exercises), and coachAdvice.`,
    config: {
      responseMimeType: "application/json"
    }
  });
  return parseGeminiJson(response.text);
}

export async function groundedConciergeChat(prompt: string, context: string): Promise<{ text: string, sources: any[] }> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-3-pro-preview",
    contents: `Context: ${context}\n\nClient Question: ${prompt}`,
    config: {
      tools: [{ googleSearch: {} }],
      systemInstruction: "You are the MUSKYFIT support coach. Use UK English. Be clear, direct, and helpful. Focus on UK-based food and training advice."
    },
  });
  return { text: response.text || "Checking that for you...", sources: response.candidates?.[0]?.groundingMetadata?.groundingChunks || [] };
}

export async function analyzeWeeklyPerformanceDeep(logs: DailyLog[], checkIn: WeeklyCheckIn): Promise<any> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-3-pro-preview",
    contents: `Review this client's week in the UK: Logs: ${JSON.stringify(logs)}, Check-in: ${JSON.stringify(checkIn)}. Provide a simple review.`,
    config: {
      responseMimeType: "application/json",
      responseSchema: {
        type: Type.OBJECT,
        properties: {
          adherenceScore: { type: Type.NUMBER },
          coachMessage: { type: Type.STRING },
          directives: { type: Type.ARRAY, items: { type: Type.STRING } },
          status: { type: Type.STRING, enum: ["GREEN", "AMBER", "RED"] }
        },
        required: ["adherenceScore", "coachMessage", "directives", "status"]
      }
    }
  });
  return parseGeminiJson(response.text);
}

export async function generateExerciseDemoVideo(exerciseName: string): Promise<string | null> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  let operation = await ai.models.generateVideos({
    model: 'veo-3.1-fast-generate-preview',
    prompt: `Professional video of an athlete demonstrating: ${exerciseName}. Clear form, well lit.`,
    config: { numberOfVideos: 1, resolution: '720p', aspectRatio: '9:16' }
  });
  while (!operation.done) {
    await new Promise(resolve => setTimeout(resolve, 10000));
    operation = await ai.operations.getVideosOperation({ operation: operation });
  }
  const link = operation.response?.generatedVideos?.[0]?.video?.uri;
  return link ? `${link}&key=${process.env.API_KEY}` : null;
}

// Fixed missing function: generateGoalVisualization using high-quality image model
export async function generateGoalVisualization(goal: string, biometrics: string): Promise<string | null> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: 'gemini-3-pro-image-preview',
    contents: {
      parts: [{ text: `High-quality aesthetic fitness goal visualization for: ${goal}. Based on metabolic profile: ${biometrics}. Cinematic gym lighting, realistic athletic physique.` }]
    },
    config: {
      imageConfig: {
        aspectRatio: "3:4",
        imageSize: "1K"
      }
    }
  });
  
  for (const part of response.candidates?.[0]?.content?.parts || []) {
    if (part.inlineData) {
      return `data:image/png;base64,${part.inlineData.data}`;
    }
  }
  return null;
}

// Fixed missing function: connectLiveCoach for real-time audio interaction
export async function connectLiveCoach(callbacks: any): Promise<any> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  return ai.live.connect({
    model: 'gemini-2.5-flash-native-audio-preview-12-2025',
    callbacks,
    config: {
      responseModalities: [Modality.AUDIO],
      speechConfig: {
        voiceConfig: { prebuiltVoiceConfig: { voiceName: 'Puck' } }
      },
      systemInstruction: "You are the MuskyFit Elite Coach. Motivate the client and answer training questions concisely using UK English."
    }
  });
}

// Fixed missing function: generateWeeklyAudioBriefing using TTS model
export async function generateWeeklyAudioBriefing(text: string): Promise<string | null> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-2.5-flash-preview-tts",
    contents: [{ parts: [{ text }] }],
    config: {
      responseModalities: [Modality.AUDIO],
      speechConfig: {
        voiceConfig: {
          prebuiltVoiceConfig: { voiceName: 'Kore' },
        },
      },
    },
  });
  return response.candidates?.[0]?.content?.parts?.[0]?.inlineData?.data || null;
}

// Fixed missing function: findEliteResources using Maps Grounding
export async function findEliteResources(query: string, latitude: number, longitude: number): Promise<{ text: string, sources: any[] }> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-2.5-flash",
    contents: `Find elite fitness resources near me: ${query}`,
    config: {
      tools: [{ googleMaps: {} }],
      toolConfig: {
        retrievalConfig: {
          latLng: { latitude, longitude }
        }
      }
    },
  });
  return {
    text: response.text || "Scanning local area...",
    sources: response.candidates?.[0]?.groundingMetadata?.groundingChunks || []
  };
}

export async function analyzeMealPhoto(base64: string): Promise<any> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: 'gemini-3-flash-preview',
    contents: {
      parts: [
        { inlineData: { mimeType: 'image/jpeg', data: base64 } },
        { text: 'Estimate calories and protein for this meal using UK portion sizes. Return JSON.' }
      ]
    },
    config: {
      responseMimeType: "application/json",
      responseSchema: {
        type: Type.OBJECT,
        properties: {
          name: { type: Type.STRING },
          calories: { type: Type.NUMBER },
          protein: { type: Type.NUMBER },
          carbs: { type: Type.NUMBER },
          fats: { type: Type.NUMBER },
          servingSize: { type: Type.STRING }
        }
      }
    }
  });
  return parseGeminiJson(response.text);
}

export async function searchUniversalFood(query: string): Promise<any> {
  const ai = new GoogleGenAI({ apiKey: process.env.API_KEY });
  const response = await ai.models.generateContent({
    model: "gemini-3-flash-preview",
    contents: `Nutrition info for: ${query}. Use UK values.`,
    config: { 
      responseMimeType: "application/json",
      responseSchema: {
        type: Type.OBJECT,
        properties: {
          name: { type: Type.STRING },
          calories: { type: Type.NUMBER },
          protein: { type: Type.NUMBER },
          carbs: { type: Type.NUMBER },
          fats: { type: Type.NUMBER },
          servingSize: { type: Type.STRING }
        }
      }
    }
  });
  return parseGeminiJson(response.text);
}

export function encodePCM(data: Float32Array): string {
  const l = data.length;
  const int16 = new Int16Array(l);
  for (let i = 0; i < l; i++) { int16[i] = data[i] * 32768; }
  let binary = '';
  const bytes = new Uint8Array(int16.buffer);
  for (let i = 0; i < bytes.byteLength; i++) { binary += String.fromCharCode(bytes[i]); }
  return btoa(binary);
}

export function decodeBase64(base64: string): Uint8Array {
  const binaryString = atob(base64);
  const bytes = new Uint8Array(binaryString.length);
  for (let i = 0; i < binaryString.length; i++) { bytes[i] = binaryString.charCodeAt(i); }
  return bytes;
}

export async function decodeAudioData(data: Uint8Array, ctx: AudioContext, sampleRate: number, numChannels: number): Promise<AudioBuffer> {
  const dataInt16 = new Int16Array(data.buffer);
  const frameCount = dataInt16.length / numChannels;
  const buffer = ctx.createBuffer(numChannels, frameCount, sampleRate);
  for (let channel = 0; channel < numChannels; channel++) {
    const channelData = buffer.getChannelData(channel);
    for (let i = 0; i < frameCount; i++) {
      channelData[i] = dataInt16[i * numChannels + channel] / 32768.0;
    }
  }
  return buffer;
}
