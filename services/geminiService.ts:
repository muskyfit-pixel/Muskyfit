import { GoogleGenAI, Type } from "@google/genai";
import { IntakeData, Meal, WorkoutDay, MacroSplit, FoodItem, DailyLog, WeeklyCheckIn } from "../types";

// Always initialize with the latest SDK pattern and named parameter
const ai = new GoogleGenAI({ apiKey: process.env.API_KEY || '' });

/**
 * Generates a weekly performance report based on client data
 */
export async function generatePerformanceReport(clientName: string, logs: DailyLog[], checkIn: WeeklyCheckIn): Promise<string> {
  const prompt = `
    Analyze fitness data for client "${clientName}".
    Recent Logs (7 days): ${JSON.stringify(logs.slice(0, 7))}
    Subjective Check-in: ${JSON.stringify(checkIn)}
    
    TASK: Write an elite, high-performance coaching report in British English.
    - Be assertive yet encouraging.
    - Summarize compliance: Calories (Target vs Actual), Protein, and Step Consistency.
    - Provide 3 "Needle-Moving" actionable points for the next 7 days.
    - Style: MuskyFit Brand Voice (Professional, Elite, Direct).
  `;
  try {
    const response = await ai.models.generateContent({
      model: "gemini-3-flash-preview",
      contents: prompt,
    });
    return response.text || "Report generation failed. Please contact your coach directly.";
  } catch (e) {
    console.error("AI Report Error:", e);
    return "Error generating report. Please check back later.";
  }
}

/**
 * Finds macro-equivalent alternatives for meals
 */
export async function getMealAlternatives(meal: Meal): Promise<string[]> {
  const prompt = `
    Find 3 alternative meal ideas for "${meal.name}" with similar macros:
    Calories: ${meal.macros.calories} | P: ${meal.macros.p} | C: ${meal.macros.c} | F: ${meal.macros.f}.
    Provide ONLY a bulleted list of the 3 meal names.
  `;
  try {
    const response = await ai.models.generateContent({
      model: "gemini-3-flash-preview",
      contents: prompt,
    });
    return response.text.split('\n').filter(s => s.trim().length > 0).slice(0, 3);
  } catch (e) {
    return ["Grilled Salmon with Asparagus", "Turkey & Quinoa Bowl", "Tofu Stir-fry"];
  }
}

/**
 * The "Big Brain" of the app: Bespoke Plan Generation
 */
export async function generatePersonalizedPlan(data: IntakeData): Promise<{ 
  trainingDayMacros: MacroSplit, 
  restDayMacros: MacroSplit, 
  mealPlan: Meal[], 
  workoutSplit: WorkoutDay[],
  coachAdvice: string
}> {
  const systemInstruction = `
    You are the MUSKYFIT MASTER COACH. 
    Expertise: Elite Body Transformation for Asian Men (30-50 professionals).
    
    NICHE SPECIFICS:
    - Target: High-stress desk jobs (Bankers, Tech, Executives).
    - Aesthetic Goal: The "Musky V-Taper" (Emphasis on lateral delts, upper back width, and core tightness).
    - Posture: Active correction for anterior pelvic tilt and rounded shoulders (desk posture).
    - Nutrition: High-protein cultural integration. Prioritize Basmati rice, Paneer (if veg), Lean Meats, and Dal in macro-friendly formats.
    
    STYLE: Professional, British English, high-authority.
  `;

  const userPrompt = `
    Create a BESPOKE 4-week high-performance protocol for ${data.name}.
    - Goal: ${data.goal.replace('_', ' ')}
    - Current Weight: ${data.weight}kg | Height: ${data.height}cm
    - Training Frequency: ${data.trainingDaysPerWeek} days/week
    - Dietary Style: ${data.culturalPreference} (${data.dietPreference})
    - Restrictions: ${data.religiousExclusions || 'None'} | Allergies: ${data.allergies || 'None'}
    
    Return a structured JSON including training/rest macros, a full day's meal plan (4 meals), and a ${data.trainingDaysPerWeek}-day workout split focusing on the Musky V-Taper and posture correction.
  `;

  try {
    // Using Gemini 3 Pro for complex logic and reasoning
    const response = await ai.models.generateContent({
      model: "gemini-3-pro-preview", 
      contents: userPrompt,
      config: {
        systemInstruction: systemInstruction,
        responseMimeType: "application/json",
        // Setting a high thinking budget to ensure deep reasoning on postural and cultural needs
        thinkingConfig: { thinkingBudget: 32768 }, 
        responseSchema: {
          type: Type.OBJECT,
          properties: {
            trainingDayMacros: {
              type: Type.OBJECT,
              properties: { calories: { type: Type.NUMBER }, p: { type: Type.NUMBER }, c: { type: Type.NUMBER }, f: { type: Type.NUMBER } },
              required: ["calories", "p", "c", "f"]
            },
            restDayMacros: {
              type: Type.OBJECT,
              properties: { calories: { type: Type.NUMBER }, p: { type: Type.NUMBER }, c: { type: Type.NUMBER }, f: { type: Type.NUMBER } },
              required: ["calories", "p", "c", "f"]
            },
            coachAdvice: { type: Type.STRING },
            mealPlan: {
              type: Type.ARRAY,
              items: {
                type: Type.OBJECT,
                properties: {
                  mealType: { type: Type.STRING },
                  name: { type: Type.STRING },
                  ingredients: { type: Type.ARRAY, items: { type: Type.STRING } },
                  instructions: { type: Type.STRING },
                  macros: {
                    type: Type.OBJECT,
                    properties: { calories: { type: Type.NUMBER }, p: { type: Type.NUMBER }, c: { type: Type.NUMBER }, f: { type: Type.NUMBER } }
                  },
                  substitutes: { type: Type.ARRAY, items: { type: Type.STRING } }
                }
              }
            },
            workoutSplit: {
              type: Type.ARRAY,
              items: {
                type: Type.OBJECT,
                properties: {
                  id: { type: Type.STRING },
                  day: { type: Type.STRING },
                  title: { type: Type.STRING },
                  exercises: {
                    type: Type.ARRAY,
                    items: {
                      type: Type.OBJECT,
                      properties: {
                        id: { type: Type.STRING },
                        name: { type: Type.STRING },
                        sets: { type: Type.NUMBER },
                        reps: { type: Type.STRING },
                        targetRpe: { type: Type.NUMBER },
                        tempo: { type: Type.STRING },
                        notes: { type: Type.STRING },
                        isWarmup: { type: Type.BOOLEAN }
                      }
                    }
                  }
                }
              }
            }
          },
          required: ["trainingDayMacros", "restDayMacros", "mealPlan", "workoutSplit", "coachAdvice"]
        }
      }
    });

    return JSON.parse(response.text || '{}');
  } catch (e) {
    console.error("Plan Generation Error:", e);
    throw e;
  }
}

/**
 * Instant AI Food identification for the Daily Log
 */
export async function searchUniversalFood(query: string): Promise<FoodItem | null> {
  const prompt = `Identify this food and return its macronutrients for 100g: "${query}".`;
  try {
    const response = await ai.models.generateContent({
      model: "gemini-3-flash-preview",
      contents: prompt,
      config: { 
        responseMimeType: "application/json",
        responseSchema: {
          type: Type.OBJECT,
          properties: {
            name: { type: Type.STRING },
            calories: { type: Type.NUMBER },
            protein: { type: Type.NUMBER },
            carbs: { type: Type.NUMBER },
            fats: { type: Type.NUMBER },
            servingSize: { type: Type.STRING }
          },
          required: ["name", "calories", "protein", "carbs", "fats", "servingSize"]
        }
      }
    });
    const result = JSON.parse(response.text || '{}');
    return { ...result, id: 'ai_' + Date.now(), type: 'WESTERN' };
  } catch (e) {
    return null;
  }
}
